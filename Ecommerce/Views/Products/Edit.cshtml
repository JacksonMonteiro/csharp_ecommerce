@model Ecommerce.Models.ViewModels.ProductFormViewModel

@{
    ViewData["Title"] = "Editar Produto";
}

<h2>@ViewData["Title"]</h2>
<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <input asp-for="Product.Id" type="hidden" class="form-control" />
            <div class="form-group">
                <label asp-for="Product.Name" class="form-label"></label>
                <input asp-for="Product.Name" class="form-control" />
                <span asp-validation-for="Product.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Product.Price" class="form-label"></label>
                <input asp-for="Product.Price" class="form-control" />
                <span asp-validation-for="Product.Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Product.PromotionId" class="form-label"></label>
                <select asp-for="Product.PromotionId" asp-items="@(new SelectList(Model.Promotions, "Id", "Title"))" class="form-control">
                </select>
            </div>
            <div class="form-group">
                <input type="submit" value="Salvar Produto" class="btn btn-primary mt-4" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}